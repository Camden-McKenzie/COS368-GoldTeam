<?xml version="1.0" encoding="UTF-8"?>
<ContentPage BackgroundColor="LightGray" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="inClassAppPractice1.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout >
        <Frame x:Name = "Header" HeightRequest="100" BackgroundColor="MediumPurple">

        </Frame>

            <Entry Placeholder="Username" HorizontalOptions="Center" FontSize="30" Margin="0,80,0,0" HeightRequest="75" WidthRequest="250"/>
            <Entry Placeholder="Password" IsPassword="True" HorizontalOptions="Center" FontSize="30" Margin="0,30,0,0" HeightRequest="75"  WidthRequest="250"/>
            <Button x:Name="loginButton" Clicked="loginButton_Clicked" Text="Login" BorderWidth="1" HorizontalOptions="Center" Margin="0,30,0,0" WidthRequest="150" HeightRequest="75" FontSize="30"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
              <Button Text="Create Account"  BorderWidth="1" HorizontalOptions="Center" Margin="0,20,20,0" WidthRequest="150" HeightRequest="75" FontSize="20"/>
               <Button Text="Create Password" BorderWidth="1" HorizontalOptions="Center" Margin="0,20,0,0" WidthRequest="150" HeightRequest="75" FontSize="20"/>
            </StackLayout>
    
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
